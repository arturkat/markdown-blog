<!-- Надо использовать 'locals' что б не было ошибки -->
<% if (locals.errorMessage != null) { %>
<div class="alert alert-danger" role="alert">
    <%= errorMessage %>
</div>
<% }; %>

<div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input value="<%= article.title %>" name="title" id="title" type="text" class="form-control">
</div>

<div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="description" id="description" class="form-control" row=3><%= article.description %></textarea>
</div>

<div class="mb-3">
    <label for="markdown" class="form-label">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control" row=3><%= article.markdown %></textarea>
</div>

<div class="mb-3">
    <label for="cover">Cover [saves to file system]</label>
    <input type="file" name="cover" id="cover" class="form-control">
</div>

<% if (locals.pageRoute === 'edit') { %>
<div class="mb-3">
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="yes" id="isRemoveCover" name="isRemoveCover">
        <label class="form-check-label" for="isRemoveCover">
            Is remove the cover from the file system?
        </label>
    </div>
</div>
<% } %>

<% if (article.coverImagePath != null) { %>
<div class="mb-3">
    <figure class="figure">
        <img src="<%= article.coverImagePath %>" class="figure-img img-fluid rounded">
    </figure>
</div>
<% } %>

<hr>

<div class="mb-3">
    <label for="coverDB">Cover [saves to DB]</label>
    <input type="file" name="coverDB" id="coverDB" class="form-control">
</div>

<% if (locals.pageRoute === 'edit') { %>
<div class="mb-3">
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="yes" id="isRemoveCoverDB" name="isRemoveCoverDB">
        <label class="form-check-label" for="isRemoveCoverDB">
            Is remove the coverDB from the DB?
        </label>
    </div>
</div>
<% } %>

<% if (article.coverImageDBPath != null) { %>
<figure class="figure">
    <img src="<%= article.coverImageDBPath %>" class="figure-img img-fluid rounded">
</figure>
<% } %>

<hr>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>